---
import Layout from "@layouts/Layout.astro";
import Footer from "@components/Footer.astro";
import Counter from "@components/Counter.astro";
import counter from "@content/counter.json";
import { homepage } from "@content/homepage";
import Features from "@components/Features.astro";
---

<Layout>
  <section class="grid py-10 place-items-center text-center">
    <h1 class="text-4xl mb-5">Simeng (Simon) He</h1>
    <p class="">Computer science student at the University of Waterloo!</p>
    <p class="">
      Previously interned <a href="https://noom.com">@noom</a> and <a
        href="https://tesla.com">@tesla</a>.
    </p>
  </section>
  {
    homepage.map((homepage) => (
      <Features
        title={homepage.title}
        icon={homepage.icon}
        content={homepage.content}
      />
    ))
  }
  <section
    class="py-20 sm:flex sm:items-center sm:justify-evenly text-center sm:text-left"
  >
    {
      (
        <ul class="grid sm:grid-cols-3 gap-16">
          {counter.map((counter) => (
            <Counter number={counter.number} label={counter.label} />
          ))}
        </ul>
      )
    }
  </section>
  <Footer />
</Layout>
